@model HotelViewModel;
@{
    ViewData["Title"] = "Room List";
}
<h2>Rooms</h2>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>

                <td>RoomId</td>
                <td>Name</td>
                <td>IsOccupies</td>
                <td>For Smokers</td>
                <td>Room Type</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RoomList)
            {
                <tr>

                    <td>@item.RoomID</td>
                    <td>@item.Name</td>
                    <td>@item.Is_ocuppied</td>
                    <td>@item.Smoke</td>
                    @if(item.Nubmerbeds.ToString()== "2") 
                    { 
                    <td>double</td>
                    }
                    @if (item.Nubmerbeds.ToString() == "_1")
                    {
                    <td>single</td>                        
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
